<html lang="<%= language %>">
    <head>
        <meta charset="<%= charset %>">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">

        <title><%= title %></title>

        <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
        <link rel="stylesheet" href="//fonts.googleapis.com/icon?family=Material+Icons">
        <link rel="stylesheet" href="//code.getmdl.io/1.3.0/material.blue-orange.min.css">

        <script defer src="//code.getmdl.io/1.3.0/material.min.js"></script>

        <style>
            html, body,
            .mdl-layout__content {
                overflow: hidden;
            }

            .mdl-layout__wrapper {
                position: absolute;
                top: 0;
                right: 0;
                bottom: 0;
                left: 0;
            }

            .mdl-layout__tab-panel {
                position: relative;
                display: block;
                height: 100%;
            }

            iframe {
                height: 100%;
            }
        </style>
    </head>

    <body>
        <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">

            <header class="mdl-layout__header mdl-color--primary">
                <div class="mdl-layout__header-row">
                    <span class="mdl-layout-title mdl-color-text--grey-100"><%= title %></span>
                </div>
                <div class="mdl-layout__tab-bar mdl-js-ripple-effect mdl-color--primary-dark">
                    <% for(var i = 0; i < folders.length; i++) { %>
                    <a href="#target-<%= i %>" class="mdl-color-text--grey-100 mdl-layout__tab<% if(i === 0) { %> is-active<% } %>">
                        <%= folders[i] %>
                    </a>
                    <% } %>
                </div>
            </header>

            <main class="mdl-layout__content">
                <div class="mdl-layout__wrapper">

                    <% for(var i = 0; i < folders.length; i++) { %>
                    <div class="mdl-layout__tab-panel is-active" id="target-<%= i %>">
                        <iframe src="<%= folders[i] %>/"></iframe>
                    </div>
                    <% } %>

                    <!-- sassdocs -->
                    <div class="mdl-layout__tab-panel" id="scss">
                        <iframe src="scss/"></iframe>
                    </div>

                </div>
            </main>
        </div>
    </body>
</html>
